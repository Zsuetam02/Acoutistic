<Page x:Class="Acoutistic.StartingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Acoutistic"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartingPage">

    <Grid>
        <Label x:Name="displayLabel" HorizontalAlignment="Center" Height="76" Width="630" VerticalAlignment="Center" Margin="0,0,0,150" FontSize="48" FontFamily="Dubai" FontWeight="Bold" RenderTransformOrigin="0.5,0.5" Content="CHOOSE YOUR DESIRED KEY"/>
        <Frame x:Name="startingPage" NavigationUIVisibility="Hidden"/>
        <Button x:Name="metronomePageButton" 
                Height="60" Width="60" 
                HorizontalAlignment="Right" VerticalAlignment="Top" 
                Click="metronomePageButton_Click" 
                Margin="0,20,100,0" >
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontSize="10">
                Metronome
                Page
            </TextBlock>
        </Button>

        <Button x:Name="recorderPageButton" 
                Height="60" Width="60" 
                HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="0,20,20,0" Click="recorderPageButton_Click">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontSize="10">
                Recorder
                Page
            </TextBlock>
        </Button>
        <ComboBox x:Name="keyChosing" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="30"/>
        <Button x:Name="confirmChoiceButton" HorizontalAlignment="Center" Margin="0,120,0,0" VerticalAlignment="Center" Width="200" Height="50" Content="CONFIRM CHOICE" Click="confirmChoiceButton_Click"/>
    </Grid>
</Page>
