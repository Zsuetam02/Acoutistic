<Page x:Class="Acoutistic.KeyChoicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Acoutistic"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="KeyChoicePage">

    <Grid Height="600" Width="800" VerticalAlignment="Bottom">
       
        <Label x:Name="displayLabel" HorizontalAlignment="Left" Height="76" VerticalAlignment="Top" Width="300" Margin="10,29,0,0" FontSize="48" FontFamily="Dubai" FontWeight="Bold" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Button x:Name="startingPageButton" 
                Height="60" Width="60" 
                HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="0,37,20,0" Click="startingPageButton_Click" HorizontalContentAlignment="Center">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontSize="10">
                Starting
                Page
            </TextBlock>
        </Button>

        <Image x:Name="imageOne" Height="140" Width="120" Margin="64,160,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Image x:Name="imageTwo" Height="140" Width="120" Margin="248,160,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Image x:Name="imageThree" Height="140" Width="120" Margin="432,160,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Image x:Name="imageFour" Height="140" Width="120" Margin="616,160,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Image x:Name="imageFive" Height="140" Width="120" Margin="110,360,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Image x:Name="imageSix" Height="140" Width="120" Margin="340,360,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Image x:Name="imageSeven" Height="140" Width="120" Margin="570,360,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <Label x:Name="imageOneLab" Height="30" Width="120" Margin="64,130,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="imageTwoLab" Height="30" Width="120" Margin="248,130,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="imageThreeLab" Height="30" Width="120" Margin="432,130,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="imageFourLab" Height="30" Width="120" Margin="616,130,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="imageFiveLab" Height="30" Width="120" Margin="110,330,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="imageSixLab" Height="30" Width="120" Margin="340,330,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="imageSevenLab" Height="30" Width="120" Margin="570,330,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

        <Label x:Name="songIntroductionLabel" Height="30" Width="300" Margin="50,0,0,80" HorizontalAlignment="Left" VerticalAlignment="Bottom" Content="Famous songs written in this key:"/>
        <Label x:Name="songOne" Height="30" Width="300" Margin="50,0,0,60" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
        <Label x:Name="songTwo" Height="30" Width="300" Margin="50,0,0,40" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
    </Grid>
</Page>
