<Page x:Class="Acoutistic.RecorderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Acoutistic"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RecorderPage">
    

    <Grid>
        <Frame x:Name="recorderPage" NavigationUIVisibility="Hidden"/>
        <Button x:Name="startingPageButton" 
                Height="60" Width="60" 
                HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="0,20,20,0" Click="startingPageButton_Click">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontSize="10">
                Starting
                Page
            </TextBlock>
        </Button>
        <Button x:Name="metronomePageButton" 
                Height="60" Width="60" 
                HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="0,20,100,0" Click="metronomePageButton_Click">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontSize="10">
                Metronome
                Page
            </TextBlock>
        </Button>
        <Button x:Name="recordButton" 
                Height="60" Width="60" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="20,20,0,0" Click="recordButton_Click">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontSize="10">
                Record
            </TextBlock>
        </Button>
        <Button x:Name="stopRecordingButton" 
                Height="60" Width="60" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="100,20,0,0" Click="stopRecordingButton_Click">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontSize="10">
                Stop
                Recording
            </TextBlock>
        </Button>
        <Button x:Name="saveButton" 
                Height="60" Width="60" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="180,20,0,0" Click="saveButton_Click">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontSize="10">
                Save
            </TextBlock>
        </Button>
        <Label x:Name="firste" Height="30" Width="750" Margin="0,130,0,0" Visibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Top" Content="e   "/>
        <Label x:Name="firstB" Height="30" Width="750" Margin="0,160,0,0" Visibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Top" Content="B   "/>
        <Label x:Name="firstG" Height="30" Width="750" Margin="0,190,0,0" Visibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Top" Content="G   "/>
        <Label x:Name="firstD" Height="30" Width="750" Margin="0,220,0,0" Visibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Top" Content="D   "/>
        <Label x:Name="firstA" Height="30" Width="750" Margin="0,250,0,0" Visibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Top" Content="A   "/>
        <Label x:Name="firstE" Height="30" Width="750" Margin="0,280,0,0" Visibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Top" Content="E   "/>

        <Label x:Name="seconde" Height="30" Width="750" Margin="0,330,0,0" Visibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Top" Content="e   "/>
        <Label x:Name="secondB" Height="30" Width="750" Margin="0,360,0,0" Visibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Top" Content="B   "/>
        <Label x:Name="secondG" Height="30" Width="750" Margin="0,390,0,0" Visibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Top" Content="G   "/>
        <Label x:Name="secondD" Height="30" Width="750" Margin="0,420,0,0" Visibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Top" Content="D   "/>
        <Label x:Name="secondA" Height="30" Width="750" Margin="0,450,0,0" Visibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Top" Content="A   "/>
        <Label x:Name="secondE" Height="30" Width="750" Margin="0,480,0,0" Visibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Top" Content="E   "/>

        <Line x:Name="separatesTwo" Y1="510" Y2="330" X1="35" X2="35" Stroke="Black" Visibility="Hidden"/>
        <Line x:Name="separatesOne" Y1="310" Y2="130" X1="35" X2="35" Stroke="Black" Visibility="Hidden"/>
    </Grid>
</Page>
