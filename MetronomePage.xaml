<Page x:Class="Acoutistic.MetronomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Acoutistic"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MetronomePage">

    <Grid>
       
        <Frame x:Name="metronomePage" NavigationUIVisibility="Hidden"/>
        <Button x:Name="MetronomeButton" Content="Metronome" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click" Height="100
                " BorderBrush="Red" Width="100"  Background="Azure"/>
        <Slider x:Name="bpmSlider" HorizontalAlignment="Center" Margin="0,473,0,0" VerticalAlignment="Top" Width="336" Height="50" ValueChanged="Slider_ValueChanged"/>
        <TextBox x:Name="tBbpm" HorizontalAlignment="Center" Margin="0,450,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" TextAlignment="Center" TextChanged="tBbpm_TextChanged"/>
        <Button x:Name="startingPageButton" 
                Height="60" Width="60" 
                HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="0,20,20,0" Click="startingPageButton_Click">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontSize="10">
                Starting
                Page
            </TextBlock>
        </Button>
        <Button x:Name="recorderPageButton" 
                Height="60" Width="60" 
                HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="0,20,100,0" Click="recorderPageButton_Click">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontSize="10">
                Recorder
                Page
            </TextBlock>
        </Button>
    </Grid>
</Page>
