      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Acoutistic"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="LoadingPage">

    <Grid>
        <Image x:Name="icon" Source="AC.ico" Height="128" Width="128" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,172,0,0"/>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Center" Height="22" Margin="0,399,0,0" VerticalAlignment="Top" Width="220"/>
    </Grid>
</Page>
